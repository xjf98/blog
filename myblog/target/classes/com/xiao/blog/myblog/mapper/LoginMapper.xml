<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiao.blog.myblog.mapper.LoginMapper">

   <select id="loginUser" parameterType="com.xiao.blog.myblog.entity.User" resultType="com.xiao.blog.myblog.entity.User">
      select uid,username,email,password from user where email=#{email} and password=#{password} 
   </select>

</mapper>