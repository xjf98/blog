<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiao.blog.myblog.mapper.RoleMapper">
 
 <select id="getRolesByUser" parameterType="string" resultType="com.xiao.blog.myblog.entity.Role">
  select id,name from role where id =( SELECT role_id from user where username = #{username})
</select>
</mapper>